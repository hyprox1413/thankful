{
  "compilerOptions": {
    // ===== MODULE CONFIGURATION =====
    "target": "ES2020",
    "module": "ESNext",              // Use ES modules
    "moduleResolution": "bundler",   // Modern resolution
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,
    
    // ===== OUTPUT =====
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "sourceMap": true,
    
    // ===== COMPATIBILITY =====
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    
    // ===== FILE HANDLING =====
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
